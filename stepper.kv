
<MainScreen>:

    #: import time __main__.time
    color: 1,1,1,1
    name: 'main'
#    servo: servo

    FloatLayout:
        size_hint: None, None


    DPEAButton:
        id:servo
        text: 'On/Off'
        font_size: 30
        x: root.width * 0.5
        y: root.height * 0.2
        on_press: root.servos()

    DPEAButton:
        id:switch
        text: 'On/Off'
        font_size: 30
        x: root.width * 0.7
        y: root.height * 0.2
        on_press: root.limit()

    DPEAButton:
        id:talon_motor
        text: 'On/Off'
        font_size: 30
        x: root.width * 0.3
        y: root.height * 0.2
        on_press: root.talon()

    DPEAButton:
        id:cyt_motor
        text: 'Cytron'
        font_size: 30
        x: root.width * 0.1
        y: root.height * 0.2
        on_press: root.cyt()
<Screen2>
    FloatLayout:
        name: 'second'
        canvas.before:
            Rectangle:
                source:'big_brain.jpg'
                size: root.width, root.height
                pos: self.pos
        DPEAButton:
            id:background_switch
            x: root.width * 0.1
            y: root.height * 0.2
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"
            Image:
                source:'think_about_it.jpg'
                allow_stretch: True
                keep_ratio: True
                x: root.width * 0.1
                y: root.height * 0.2

<Screen3>
    FloatLayout:
        name:'third'
        DPEAButton:
            id:animated_switch
            x: root.width * 0.1
            y: root.height * 0.2
            on_press:
                root.movement(self)
                app.root.current = "main"
                root.manager.transition.direction = "down"
            Image:
                source:'brain_expand.jpg'
                allow_stretch: True
                keep_ratio: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y